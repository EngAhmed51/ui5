<mvc:View controllerName="sap.ui.demo.walkthrough.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <Shell>
    <App class="myAppDemoWT">
      <pages>
        <Page title="{i18n>homePageTitle}" class="sapUiResponsiveMargin" width="auto">
          <content>
            <Panel headerText="{i18n>helloPanelTitle}">
              <content>
                <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="myCustomButton"></Button>

                <Input value="{/recipient/name}" description="hello {/recipient/name}" valueLiveUpdate="true" width="30%"></Input>
                <FormattedText htmltext="text hello {/recipient/name}" textAlign="Begin" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText">

                </FormattedText>
              </content>
            </Panel>
          </content>
        </Page>
      </pages>
    </App>
  </Shell>
</mvc:View>
