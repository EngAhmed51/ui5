<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="helloDialog" title="hello {/recipient/name}" class="sapUiContentPadding">
        <content>
            <core:Icon src="sap-icon://hello-world">
